{
  "name": "@pristine-ts/metadata",
  "version": "1.0.0",
  "description": "",
  "module": "dist/lib/esm/metadata.js",
  "main": "dist/lib/cjs/metadata.js",
  "types": "dist/types/metadata.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "prepare": "npm run build",

    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magieno/pristine-metadata.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/magieno/pristine-metadata/issues"
  },
  "homepage": "https://github.com/magieno/pristine-metadata#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "strictNullChecks": false,
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true
        }
      }
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  }
}
